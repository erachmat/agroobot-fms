<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_nama_komoditas"
            android:text="Nama Komoditas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans_semibold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"/>

        <ImageView
            android:id="@+id/btn_action"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_item_menu"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_lahan"
        android:text="Lahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"/>

    <TextView
        android:id="@+id/txt_status"
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans_medium"
        android:textColor="@color/white"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@drawable/button_rounded_grey"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_10ssp"/>

<!--    <TextView-->
<!--        android:id="@+id/txt_nominal_budget"-->
<!--        android:text="Nominal Budget Plan"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:fontFamily="@font/worksans_medium"-->
<!--        android:textColor="@color/black"-->
<!--        android:layout_marginTop="@dimen/_5sdp"-->
<!--        android:textSize="@dimen/_12ssp"/>-->

</LinearLayout>