<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_pengamatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_medium"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/green"
                android:background="@drawable/custom_border_green"
                android:text="Pengamatan 1" />

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/btn_delete"
                android:src="@drawable/edit_rounded"/>

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/trash"/>

            <LinearLayout
                android:id="@+id/lyt_kondisi_daun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/txt_pengamatan">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Kondisi Daun" />

                <TextView
                    android:id="@+id/txt_kondisi_daun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:text=": 3" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_kondisi_tanah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_kondisi_daun">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Kondisi Tanah/Lahan" />

                <TextView
                    android:id="@+id/txt_kondisi_tanah"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:text=": Kering" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_kondisi_pengairan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_kondisi_tanah">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Kondisi Pengairan" />

                <TextView
                    android:id="@+id/txt_kondisi_pengairan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:text=": 3 - 4 Cm" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_kondisi_anakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_kondisi_pengairan">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Kondisi Anakan" />

                <TextView
                    android:id="@+id/txt_kondisi_anakan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:text=": Cukup banyak" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_kondisi_bulir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_kondisi_anakan">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Kondisi Bulir" />

                <TextView
                    android:id="@+id/txt_kondisi_bulir"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:text=": Bulir" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_serangan_hama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_kondisi_bulir">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Serangan Hama/Penyakit" />

                <TextView
                    android:id="@+id/txt_serangan_hama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:text=": Ada" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_catatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_serangan_hama">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Catatan" />

                <TextView
                    android:id="@+id/txt_catatan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:text=": Sudah cukup baik" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>