<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".EditPengamatanActivity">

    <!-- TOP BAR -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_black"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/round_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/worksans_medium"
            android:text="Ubah Pengamatan Petani"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp"
            android:background="@color/grey">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_pengamatan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/custom_border"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_semibold"
                        android:textAlignment="center"
                        android:text="Form"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="Kondisi Daun"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/sp_kondisi_daun"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            app:smsp_arrowSize="0dp"
                            app:smsp_hint="- Pilih kondisi daun -"
                            app:smsp_itemColor="@color/black"
                            app:smsp_itemListColor="@color/black"
                            app:smsp_itemListHintBackgroundColor="#808080"
                            app:smsp_itemListHintColor="#FFFFFF"
                            app:smsp_floatingLabelColor="@color/white"
                            app:smsp_multilineError="false"
                            app:smsp_underlineColor="@color/white"
                            app:smsp_hintSize="@dimen/_12ssp"
                            app:smsp_selectedItemListColor="@color/green" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/round_arrow_back_grey"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="Kondisi Pengairan"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/sp_kondisi_pengairan"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            app:smsp_arrowSize="0dp"
                            app:smsp_hint="- Pilih kondisi pengairan -"
                            app:smsp_itemColor="@color/black"
                            app:smsp_itemListColor="@color/black"
                            app:smsp_itemListHintBackgroundColor="#808080"
                            app:smsp_itemListHintColor="#FFFFFF"
                            app:smsp_floatingLabelColor="@color/white"
                            app:smsp_multilineError="false"
                            app:smsp_underlineColor="@color/white"
                            app:smsp_hintSize="@dimen/_12ssp"
                            app:smsp_selectedItemListColor="@color/green" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/round_arrow_back_grey"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="Kondisi Bulir"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/sp_kondisi_bulir"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            app:smsp_arrowSize="0dp"
                            app:smsp_hint="- Pilih kondisi bulir -"
                            app:smsp_itemColor="@color/black"
                            app:smsp_itemListColor="@color/black"
                            app:smsp_itemListHintBackgroundColor="#808080"
                            app:smsp_itemListHintColor="#FFFFFF"
                            app:smsp_floatingLabelColor="@color/white"
                            app:smsp_multilineError="false"
                            app:smsp_underlineColor="@color/white"
                            app:smsp_hintSize="@dimen/_12ssp"
                            app:smsp_selectedItemListColor="@color/green" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/round_arrow_back_grey"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="Kondisi Tanah / Lahan"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/sp_kondisi_lahan"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            app:smsp_arrowSize="0dp"
                            app:smsp_hint="- Pilih kondisi lahan -"
                            app:smsp_itemColor="@color/black"
                            app:smsp_itemListColor="@color/black"
                            app:smsp_itemListHintBackgroundColor="#808080"
                            app:smsp_itemListHintColor="#FFFFFF"
                            app:smsp_floatingLabelColor="@color/white"
                            app:smsp_multilineError="false"
                            app:smsp_underlineColor="@color/white"
                            app:smsp_hintSize="@dimen/_12ssp"
                            app:smsp_selectedItemListColor="@color/green" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/round_arrow_back_grey"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="Kondisi Anakan"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/sp_kondisi_anakan"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            app:smsp_arrowSize="0dp"
                            app:smsp_hint="- Pilih kondisi anakan -"
                            app:smsp_itemColor="@color/black"
                            app:smsp_itemListColor="@color/black"
                            app:smsp_itemListHintBackgroundColor="#808080"
                            app:smsp_itemListHintColor="#FFFFFF"
                            app:smsp_floatingLabelColor="@color/white"
                            app:smsp_multilineError="false"
                            app:smsp_underlineColor="@color/white"
                            app:smsp_hintSize="@dimen/_12ssp"
                            app:smsp_selectedItemListColor="@color/green" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/round_arrow_back_grey"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="Adakah Serangan Hama/Penyakit"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_border"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/sp_hama"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            app:smsp_arrowSize="0dp"
                            app:smsp_hint="- Pilih kondisi -"
                            app:smsp_itemColor="@color/black"
                            app:smsp_itemListColor="@color/black"
                            app:smsp_itemListHintBackgroundColor="#808080"
                            app:smsp_itemListHintColor="#FFFFFF"
                            app:smsp_floatingLabelColor="@color/white"
                            app:smsp_multilineError="false"
                            app:smsp_underlineColor="@color/white"
                            app:smsp_hintSize="@dimen/_12ssp"
                            app:smsp_selectedItemListColor="@color/green" />

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/round_arrow_back_grey"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans_regular"
                        android:text="Catatan"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp" />

                    <EditText
                        android:id="@+id/et_catatan"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/custom_border"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/button_rounded_blue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kirim"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>