<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_medium"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/green"
                android:background="@drawable/custom_border_green"
                android:text="Aktivitas" />

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/btn_delete"
                android:src="@drawable/edit_rounded"/>

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/trash"/>

            <TextView
                android:id="@+id/txt_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans_medium"
                android:text="Aplikasi Pestisida (Insek/Fungi) + Pest Solution (utk OPT)"
                android:layout_below="@+id/txt_activity"
                android:maxLines="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/lyt_bahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/txt_activity_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Bahan" />

                <TextView
                    android:id="@+id/txt_bahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text=": Insektisida + PS" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_dosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_bahan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Dosis" />

                <TextView
                    android:id="@+id/txt_dosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text=": 50% : 50%" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_jumlah_hst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_dosis">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Jumlah HST" />

                <TextView
                    android:id="@+id/txt_jumlah_hst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text=": 42" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_satuan_hst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lyt_jumlah_hst">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:textColor="@color/grey_30"
                    android:textSize="@dimen/_10ssp"
                    android:text="Satuan HST" />

                <TextView
                    android:id="@+id/txt_satuan_hst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_medium"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text=": HST" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>