<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pai"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:text="SISTEM MANAJEMEN"
                android:fontFamily="@font/worksans_semibold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:text="PETANI"
                android:fontFamily="@font/worksans_semibold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="Hello Again!"
                android:fontFamily="@font/worksans_semibold"
                android:gravity="top"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="Welcome back, youâ€™ve been missed!"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/worksans_medium"
                android:gravity="top"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="Nomor Telepon"
                android:fontFamily="@font/worksans_semibold"
                android:layout_marginTop="@dimen/_20sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/custom_border">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_minus10sdp"
                    android:backgroundTint="@color/white"
                    android:hint="Masukkan No.Telepon"
                    android:fontFamily="@font/worksans_regular"
                    android:padding="@dimen/_10sdp" />

            </RelativeLayout>

            <!--    <EditText-->
            <!--        android:id="@+id/et_username"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:background="@drawable/border_custom"-->
            <!--        android:hint="Enter username"-->
            <!--        android:paddingStart="@dimen/_10sdp"-->
            <!--        android:paddingEnd="@dimen/_10sdp"-->
            <!--        android:paddingTop="@dimen/_15sdp"-->
            <!--        android:paddingBottom="@dimen/_15sdp"-->
            <!--        android:inputType="textEmailAddress"-->
            <!--        android:layout_marginTop="@dimen/_5sdp"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:text="Sandi"
                android:fontFamily="@font/worksans_semibold"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="top" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/custom_border">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_minus10sdp"
                    android:layout_toStartOf="@+id/show_pass_btn"
                    android:backgroundTint="@color/white"
                    android:hint="Masukkan Sandi"
                    android:fontFamily="@font/worksans_regular"
                    android:inputType="textPassword"
                    android:padding="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/show_pass_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/ice_eye" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_semibold"
                    android:text="Mengingat saya"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey_dark"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:background="@drawable/button_rounded_blue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masuk"
                    android:textColor="@color/white"
                    android:fontFamily="@font/worksans_semibold"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:text="Lupa sandi kamu?"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey_dark" />

                <TextView
                    android:id="@+id/txt_forget_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_semibold"
                    android:text="Disini"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_regular"
                    android:text="Tidak memiliki akun?"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/grey_dark" />

                <TextView
                    android:id="@+id/txt_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans_semibold"
                    android:text="Daftar Sekarang"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>